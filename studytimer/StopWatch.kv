BoxLayout:
    orientation: 'vertical'
    spacing: 20
    
    BoxLayout:
        orientation: 'vertical'
        size_hint: (1, None)
        height: 100
        spacing: 10

        Label:
            text: 'Current Time'
            font_name: "Pretendard-Bold.ttf"
            font_size: 25
            size_hint_y: None
            height: 30

        Label:
            id: time
            font_size: 40
            markup: True
            text: '[b]00[/b]:00:00'

    
    # Korean 스톱워치
    BoxLayout:
        orientation: 'vertical'
        size_hint: (1, None)
        height: 200
        spacing: 10

        Label:
            text: "Korean"
            font_name: "Pretendard-Bold.ttf"
            font_size: 30
            size_hint_y: None
            height: 40
            color: (0.968, 0.506, 0.624, 1)

        Label:
            id: korean
            font_name: "Pretendard-Medium.ttf"
            font_size: 40
            markup: True
            text: '00:00:00'

        BoxLayout:
            orientation: 'horizontal'
            padding: 20
            spacing: 20
            size_hint: (1, None)
            height: 80

            Button:
                id: korean_start_stop
                text: 'Start'
                on_press: app.start_stop("korean")

            Button:
                id: korean_reset
                text: 'Reset'
                on_press: app.reset("korean")

